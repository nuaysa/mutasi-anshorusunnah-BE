generator client {
  provider   = "prisma-client-js"
  output     = "./generated/client"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  role         UserRole @default(user)
  createdAt    DateTime @default(now())
  isTokenValid Boolean  @default(true)
}

model Santri {
  id         String       @id @default(uuid())
  name       String
  grade      String?
  generation Int?
  deposit    BigInt       @default(0)
  status     SantriStatus @default(active)
  createdAt  DateTime     @default(now())

  debt         Debt[]
  transactions Transaction[]
}

model Debt {
  id              String     @id @default(uuid())
  info            String
  totalAmount     BigInt
  remainingAmount BigInt
  status          DebtStatus @default(open)
  createdAt       DateTime   @default(now())

  santriId String?
  santri   Santri? @relation(fields: [santriId], references: [id])

  transactions Transaction[]
}

enum DebtStatus {
  open
  paid
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())

  transactions Transaction[]
}

model Vendor {
  id        String   @id @default(uuid())
  name      String   @unique
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())

  transactions Transaction[]
}

model Transaction {
  id String @id @default(uuid())

  santriId String?
  santri   Santri? @relation(fields: [santriId], references: [id])

  debtId String?
  debt   Debt?   @relation(fields: [debtId], references: [id])

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  vendorId String?
  vendor   Vendor? @relation(fields: [vendorId], references: [id])

  type    TransactionType
  purpose TransactionPurpose @default(other)

  amount      BigInt
  description String?
  date        DateTime
  createdAt   DateTime @default(now())
}

enum TransactionType {
  income
  expense
}

enum TransactionPurpose {
  deposit_topup
  deposit_withdrawal
  debt_created
  debt_payment
  other
}

enum UserRole {
  admin
  user
}

enum SantriStatus {
  active
  inactive
  graduated
  stopped
}
